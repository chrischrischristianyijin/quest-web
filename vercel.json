{
  "version": 2,
  "builds": [
    {
      "src": "src/client/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/js/(.*)",
      "dest": "/src/client/js/$1"
    },
    {
      "src": "/styles/(.*)",
      "dest": "/src/client/styles/$1"
    },
    {
      "src": "/public/(.*)",
      "dest": "/src/client/public/$1"
    },
    {
      "src": "/login",
      "dest": "/src/client/pages/login.html"
    },
    {
      "src": "/signup",
      "dest": "/src/client/pages/signup.html"
    },
    {
      "src": "/my-space",
      "dest": "/src/client/pages/my-space.html"
    },
    {
      "src": "/",
      "dest": "/src/client/pages/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/src/client/pages/index.html"
    }
  ]
} 